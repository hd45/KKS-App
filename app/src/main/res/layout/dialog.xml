<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="#6E6E6E">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_appverlassen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="App verlassen"
        android:textColor="#000000"
        android:textSize="25dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_appverlassen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="MÃ¶chtest du die App verlassen?"
        android:textSize="19dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="14dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_nein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nein"
            android:background="@drawable/dialog_buttons"
            android:textColor="#000000"
            android:backgroundTint="#FFFFFF"
            android:layout_weight="1"
            android:layout_margin="15dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ja"
            android:background="@drawable/dialog_buttons"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:layout_margin="15dp"/>

    </LinearLayout>
</LinearLayout>